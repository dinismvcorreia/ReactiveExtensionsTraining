<Window x:Class="ReactiveExtensionsTraining.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReactiveExtensionsTraining"
        mc:Ignorable="d"
        Title="Reactive Extensions Training" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <ListBox Grid.Row="0" x:Name="ItemsListBox" Margin="0 10" />

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button x:Name="PullButton" Content="Pull Data" Margin="0 10" Padding="10" Click="PullButton_Click" />
            <Button x:Name="ObserveButton" Content="Observe Data" Margin="10" Padding="10" Click="ObserveButton_Click" />
        </StackPanel>
    </Grid>
</Window>
